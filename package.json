{
  "name": "react-videotape",
  "version": "1.0.10",
  "description": "Video player with build in controls for react",
  "author": "Tanishq Singh <tanishqsingh640@gmail.com>",
  "contributors": [],
  "repository": "git+https://github.com/tanishq-singh-2301/react-videotape",
  "license": "MIT",
  "main": "dist/cjs/index.js",
  "module": "dist/esm/index.js",
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "rm -rf dist && yarn pretty && yarn build:esm && yarn build:cjs && yarn build:css",
    "build:esm": "tsc",
    "build:cjs": "tsc --module CommonJS --outDir dist/cjs",
    "build:css": "tailwindcss -i ./styles/global.css -o ./dist/index.css --minify",
    "watch": "rm -rf dist && concurrently \"yarn watch:esm\" \"yarn watch:cjs\" \"yarn watch:css\" ",
    "watch:esm": "tsc --watch",
    "watch:cjs": "tsc --module CommonJS --outDir dist/cjs --watch",
    "watch:css": "tailwindcss -i ./styles/global.css -o ./dist/index.css --watch",
    "pretty": "prettier --write src"
  },
  "bugs": {
    "url": "https://github.com/tanishq-singh-2301/react-videotape/issues"
  },
  "homepage": "https://github.com/tanishq-singh-2301/react-videotape#readme",
  "keywords": [
    "react",
    "typescript",
    "videoplayer",
    "videotape",
    "video-player",
    "video"
  ],
  "dependencies": {
    "moment-duration-format": "^2.3.2",
    "moment-timezone": "^0.5.34",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-full-screen": "^1.1.1",
    "react-icons": "^4.4.0"
  },
  "devDependencies": {
    "@types/moment-duration-format": "^2.2.3",
    "@types/node": "^18.7.9",
    "@types/react": "^18.0.17",
    "@types/react-dom": "^18.0.6",
    "concurrently": "^7.3.0",
    "prettier": "^2.7.1",
    "tailwindcss": "^3.1.8",
    "typescript": "^4.7.4"
  },
  "peerDependencies": {
    "react": "^18.2.0",
    "react-dom": "^18.2.0"
  }
}
